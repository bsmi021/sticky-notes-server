{
    "compilerOptions": {
        "target": "esnext",
        "module": "NodeNext",
        "lib": [
            "es2022"
        ],
        "declaration": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "moduleResolution": "nodenext"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}